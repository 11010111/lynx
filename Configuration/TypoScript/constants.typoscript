##############################
#### FLUID STYLED CONTENT ####
##############################
styles {
    content {
        textmedia.linkWrap.lightboxEnabled = 1
        textmedia.maxW = 1200
        textmedia.maxWInText = 600
    }

    templates {
        layoutRootPath = fileadmin/lynx/ext/lynx/Layouts/ContentElements/
        partialRootPath = fileadmin/lynx/ext/lynx/Partials/ContentElements/
        templateRootPath = fileadmin/lynx/ext/lynx/Templates/ContentElements/
    }
}

##############################
### CONTENT TEMPLATE PATHS ###
##############################
lib.contentElement {
    templateRootPaths.20 = fileadmin/lynx/ext/lynx/Templates/ContentElements
    partialRootPaths.20 = fileadmin/lynx/ext/lynx/Partials/ContentElements
    layoutRootPaths.20 = fileadmin/lynx/ext/lynx/Layout/ContentElements
}

#############################
#### MASK TEMPLATE PATHS ####
#############################
lib.maskContentElement {
  layoutRootPaths.20 = /fileadmin/lynx/mask_project/Resources/Private/Frontend/Layouts/
  partialRootPaths.20 = /fileadmin/lynx/mask_project/Resources/Private/Frontend/Partials/
  templateRootPaths.20 = /fileadmin/lynx/mask_project/Resources/Private/Frontend/Templates/
}

############
### PAGE ###
############
page {
     fluidtemplate {
        layoutRootPath = fileadmin/lynx/ext/lynx/Layouts/Page/
        partialRootPath = fileadmin/lynx/ext/lynx/Partials/Page/
        templateRootPath = fileadmin/lynx/ext/lynx/Templates/Page/
    }
}
