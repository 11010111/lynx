##############################
#### FLUID STYLED CONTENT ####
##############################
styles {
  content {
    textmedia.linkWrap.lightboxEnabled = 1
    textmedia.maxW = 1200
    textmedia.maxWInText = 600
  }

  templates {
    layoutRootPath = EXT:lynx/Resources/Private/Layouts/ContentElements/
    partialRootPath = EXT:lynx/Resources/Private/Partials/ContentElements/
    templateRootPath = EXT:lynx/Resources/Private/Templates/ContentElements/
  }
}


##############################
### CONTENT TEMPLATE PATHS ###
##############################
lib.contentElement {
  layoutRootPaths.20 = EXT:lynx/Resources/Private/Layouts/ContentElements/
  partialRootPaths.20 = EXT:lynx/Resources/Private/Partials/ContentElements/
  templateRootPaths.20 = EXT:lynx/Resources/Private/Templates/ContentElements/
}


############
### PAGE ###
############
page {
  fluidtemplate {
    layoutRootPath = EXT:lynx/Resources/Private/Layouts/Page/
    partialRootPath = EXT:lynx/Resources/Private/Partials/Page/
    templateRootPath = EXT:lynx/Resources/Private/Templates/Page/
  }

  tracking {
    google {
      trackingID =
      anonymizeIp = 1
    }
  }
}
